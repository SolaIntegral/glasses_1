rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーコレクション（セッション管理用に全員が読み書き可能）
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    // セッションコレクション（セッション管理用に全員が読み書き可能）
    match /sessions/{sessionId} {
      allow read: if true;
      allow write: if true;
    }
    
    // 講師コレクション（全員が読み書き可能）
    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if true;
    }
    
    // 生徒プロフィールコレクション（全員が読み書き可能）
    match /studentProfiles/{profileId} {
      allow read: if true;
      allow write: if true;
    }
    
    // 空き時間コレクション（全員が読み書き可能）
    match /availableSlots/{slotId} {
      allow read: if true;
      allow write: if true;
    }
    
    // 予約コレクション（全員が読み書き可能）
    match /bookings/{bookingId} {
      allow read: if true;
      allow write: if true;
    }
    
    // 通知コレクション（全員が読み書き可能）
    match /notifications/{notificationId} {
      allow read: if true;
      allow write: if true;
    }

    // アプリログコレクション（全員が読み書き可能）
    match /appLogs/{logId} {
      allow read: if true;
      allow write: if true;
    }
  }
}

